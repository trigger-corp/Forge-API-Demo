{
	"platform_version": "v1.2",
	"name": "API_demo2",
	"author": "todor.miteff@gmail.com",
	"version": "0.1",
	"description": "Forge API Demonstration",
	"permissions": [
		"tabs",
		"http://www.google.com/*",
		"http://www.trigger.io/*",
		"notifications"
	],
	"background_files": ["js/background.js"],
	"browser_action": {
		"default_title": "Forge API Demonstration",
		"default_popup": "index.html",
		"default_icon": "img/logo-forge.png"
	},
	"modules": {
        "topbar": true
    },
	"activations": [
		{
			"patterns": ["http://*/*", "https://*/*"],
			"styles": [],
			"scripts": ["js/every-page.js"],
			"run_at": "start",
			"all_frames": false
		}
	],
	"logging": {
			"level": "INFO"
	}
}
